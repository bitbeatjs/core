{
  "name": "@bitbeat/core",
  "description": "The core package of bitbeat.",
  "version": "0.0.10",
  "main": "index.js",
  "author": "Oliver Freudrich <info@oliverfreudrich.com> (https://oliverfreudrich.com)",
  "license": "MIT",
  "private": false,
  "typings": "./index.d.ts",
  "repository": "bitbeatjs/core",
  "bugs": {
    "url": "https://github.com/bitbeatjs/core/issues"
  },
  "homepage": "https://github.com/bitbeatjs/core",
  "scripts": {
    "start": "node ./bin/index.js start",
    "dev": "node --inspect bin/index.js start",
    "build": "npx gulp default",
    "watch": "npx gulp watch",
    "lint": "eslint .",
    "analyse:dependencies": "npx bundle-phobia -p package.json",
    "analyse:licenses": "yarn licenses list",
    "test": "npm run test:local && npm run test:production",
    "test:local": "ava --config ava.local.config.js",
    "test:production": "ava --config ava.production.config.js",
    "test:watch": "ava --watch",
    "build:docs": "npx docsify init ./docs",
    "serve:docs": "npx docsify serve ./docs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test && npm run test:production"
  },
  "dependencies": {
    "chokidar": "^3.4.2",
    "commander": "^6.1.0",
    "debug": "^4.1.1",
    "lodash": "^4.17.20",
    "ms": "^2.1.2",
    "node-cron": "^2.0.3",
    "pino": "^6.6.0",
    "pino-pretty": "^4.2.1",
    "please-upgrade-node": "^3.2.0",
    "promise-parallel-throttle": "^3.3.0",
    "state-subscriber": "^0.1.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.161",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.6.4",
    "@types/node-cron": "^2.0.3",
    "@types/pino": "^6.3.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "ava": "^3.12.1",
    "bundle-phobia-cli": "^0.14.8",
    "docsify-cli": "^4.4.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "gulp": "^4.0.2",
    "gulp-changed-in-place": "^2.3.0",
    "gulp-eslint": "^6.0.0",
    "gulp-terser": "^1.4.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "merge-stream": "^2.0.0",
    "prettier": "2.1.1",
    "type-fest": "^0.16.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run test",
      "npm run test:production",
      "npm run lint",
      "prettier --write"
    ],
    "*.{js,css,md}": [
      "npm run test",
      "npm run test:production",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=10"
  }
}
